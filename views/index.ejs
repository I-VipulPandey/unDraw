<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../stylesheets/style.css" />
    <title>Document</title>
  </head>

  <body>

    <div id="main">
      <canvas width="800" height="500" id="canvas"></canvas>

      <div class="draw-area">
        <div class=" controls">
          <button
            title="Drag (select element to drag)"
            id="drag"
            class="options"
          >
            <img
              src="https://thenounproject.com/api/private/icons/2709846/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button
            title="Erase (select element to erase)"
            id="eraser"
            class="options"
          >
            <img
              src="https://thenounproject.com/api/private/icons/5832432/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button title="Pencil" id="pencil" class="options">
            <img
              src="https://thenounproject.com/api/private/icons/5833346/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button title="Add image" id="image" class="options">
            <img
              src="https://thenounproject.com/api/private/icons/1559834/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button title="Add shapes" id="shapes" class="options">
            <img
              src="https://thenounproject.com/api/private/icons/256628/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button title="Text" id="text" class="options">
            <img
              src="https://thenounproject.com/api/private/icons/3715909/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button title="Delete everything" id="delete" class="options">
            <img
              src="https://thenounproject.com/api/private/icons/5835378/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button title="Download" id="download" class="options">
            <img
              src="https://thenounproject.com/api/private/icons/5830537/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>

          <div id="shapes-options">
            <button title="Rectangle" id="rectangle" class="options">
              <img
                src="https://thenounproject.com/api/private/icons/5842862/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
                alt=""
              />
            </button>
            <button title="Circle" id="circle" class="options">
              <img
                src="https://thenounproject.com/api/private/icons/1757384/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
                alt=""
              />
            </button>
            <button title="Line" id="line" class="options">
              <img
                src="https://thenounproject.com/api/private/icons/2759142/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
                alt=""
              />
            </button>
            <button title="Triangle" id="triangle" class="options">
              <img
                src="https://thenounproject.com/api/private/icons/1055895/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
                alt=""
              />
            </button>
          </div>
        </div>

        <div class=" undo-redo">
          <button title="Undo" id="undo" class="undo options">
            <img
              src="https://thenounproject.com/api/private/icons/1672221/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
          <button title="Redo" id="redo" class="redo options">
            <img
              src="https://thenounproject.com/api/private/icons/1672210/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0"
              alt=""
            />
          </button>
        </div>

        <div class="color-container ">
          <!-- Color palette buttons -->
<button  class="color-button options" data-color="black"></button>
<button class="color-button options" data-color="red"></button>
<button class="color-button options" data-color="blue"></button>

<!-- Color selector -->
<input type="color" class="options" id="color-selector" value="#000000">

        </div>

      </div>
    </div>
